---
import MVpc from '../assets/images/mv_pc.jpg';
import MVsp from '../assets/images/mv_sp.jpg';
---

<div class="mv">
  <picture >

    <source media="(max-width: 768px)" srcset={MVsp.src}  class="mv__picture"/>
    <img src={MVpc.src}alt="" class="mv__picture"/>
  </picture>
</div>

<style>
  .mv {
    position: relative;
    width: 100%;
    height: 100svh;
    overflow: hidden;

      &::before{
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
      background: rgba(255,255,255,0.3);
    }
  }
  .mv__picture {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -2;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>